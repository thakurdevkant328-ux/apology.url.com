<script>
/* CURSOR */
const cur=document.querySelector(".cursor");
document.addEventListener("mousemove",e=>{
cur.style.left=e.clientX+"px";cur.style.top=e.clientY+"px";
});

/* TIMER */
const startDate=new Date("August 2, 2025 00:00:00").getTime();
function updateTimer(){
const now=new Date().getTime();let d=now-startDate;
if(d<0){timer.innerText="Waiting for our forever ğŸ¤";return;}
const s=Math.floor(d/1000),m=Math.floor(s/60),h=Math.floor(m/60),days=Math.floor(h/24);
timer.innerHTML=`${days} days<br>${h%24} hours ${m%60} minutes ${s%60} seconds`;
}
setInterval(updateTimer,1000);updateTimer();

/* CHAT */
const lines=[
"I should have stopped you that day.",
"I should have listened instead of reacting.",
"I am really sorry.",
"You always mattered more than my ego."
];
let i=0;const chat=document.getElementById("chat");
function nextLine(){
if(i>=lines.length)return;
const t=document.createElement("div");t.className="typing";t.innerText="typingâ€¦";
chat.appendChild(t);
setTimeout(()=>{t.remove();const m=document.createElement("div");
m.className="msg";m.innerText=lines[i++];chat.appendChild(m);nextLine();},1200);
}
setTimeout(nextLine,800);

/* PROMISE */
const promises=[
"I promise to listen more and speak less.",
"I promise to fix problems, not win arguments.",
"I promise to cherish every little moment.",
"I promise to understand before reacting.",
"I promise to keep my ego away from us."
];
function openPromise(){
show("ğŸ’— A Promise",promises[Math.floor(Math.random()*promises.length)]);
}

/* CONFETTI */
function launchConfetti(){
const e=["ğŸ‰","ğŸŠ","ğŸ’–","âœ¨","ğŸŒ¸","ğŸ’—"];
for(let i=0;i<35;i++){
const c=document.createElement("div");
c.className="confetti";c.innerText=e[Math.floor(Math.random()*e.length)];
c.style.left=Math.random()*100+"vw";
c.style.animationDuration=(Math.random()*2+2)+"s";
document.body.appendChild(c);
setTimeout(()=>c.remove(),4000);
}
}

/* FORGIVE */
function forgive(){
launchConfetti();
show("ğŸ‰ Thank You","Thank you for giving us another chance. I respect your feelings and your space.");
}
function notYet(){
show("ğŸ¤ I Understand","Take your time. I respect how you feel.");
}

/* COUPON */
function openCoupon(){
show("ğŸŸï¸ Love Coupon","Valid for One Long Hug ğŸ¤<br>Unlimited Momos Date ğŸ¥Ÿ<br><small>Redeemable anytime. Lifetime validity.</small>");
}

/* MODAL */
function openAlbum(){album.style.display="block";}
function closeAlbum(){album.style.display="none";}

/* POPUP */
function show(t,m){
popup.innerHTML=`<h3>${t}</h3><p>${m}</p><button onclick="popup.style.display='none'">Close</button>`;
popup.style.display="block";
}

/* THEME */
function toggleTheme(){
document.body.classList.toggle("gray");
sad.pause();love.pause();
document.body.classList.contains("gray")?sad.play():love.play();
}
